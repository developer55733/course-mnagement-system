{

  "name": "it-management-system",

  "version": "1.0.0",

  "description": "IT Management System - Node.js server connecting to Railway MySQL database",

  "main": "server.js",

  "scripts": {

    "start": "node server.js",

    "dev": "nodemon server.js",

    "build": "echo 'Build completed'",

    "heroku-postbuild": "npm install",

    "railway-setup": "chmod +x railway-deploy.sh && ./railway-deploy.sh",

    "railway-migrate": "mysql -h $MYSQL_HOST -P $MYSQL_PORT -u $MYSQL_USERNAME -p$MYSQL_PASSWORD $MYSQL_DATABASE < railway-database-setup.sql",

    "deploy:railway": "railway up"

  },

  "dependencies": {

    "bcryptjs": "^3.0.3",

    "body-parser": "^2.2.1",

    "cors": "^2.8.5",

    "dotenv": "^17.3.1",

    "express": "^4.22.1",

    "express-session": "^1.18.1",

    "hbs": "^4.2.0",

    "mysql2": "^3.16.0"

  },

  "devDependencies": {

    "nodemon": "^3.1.11"

  },

  "keywords": ["nodejs", "express", "mysql", "railway", "it-management", "education"],

  "author": "Chrispin Golden",

  "license": "ISC",

  "type": "commonjs",

  "engines": {

    "node": ">=14.0.0"

  }

}

